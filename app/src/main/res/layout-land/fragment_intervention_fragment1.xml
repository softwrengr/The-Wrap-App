<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.InterventionFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textPreview2k3aLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textPreview2k3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who used an intervention?"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:textSize="24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPreview2k3aLayout"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnFacilitator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="facilitator"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"/>


            <Button
                android:id="@+id/btnTherapist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="therapist"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/cfs_intervention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cfs"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnParentPartner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="parent partner"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="team"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
