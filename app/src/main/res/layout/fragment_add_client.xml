<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="androidlab.com.recaptube.Fragments.AddClientFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/etClientName"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:hint="First Name"
        android:background="@null"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
    <EditText
        android:id="@+id/etMiddleName"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:hint="Middle Name"
        android:background="@null"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:id="@+id/etLastName"
        android:hint="Last Name"
        android:textSize="20sp"
        android:inputType="text"
        android:background="@null"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:drawSelectorOnTop="true"
                android:entries="@array/genderSpinner"></Spinner>
            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="70sp"-->
                <!--android:id="@+id/etGender"-->
                <!--android:hint="Gender"-->
                <!--android:textSize="20sp"-->
                <!--android:inputType="text"-->
                <!--android:background="@null"-->
                <!--android:layout_marginRight="20sp" />-->
        </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:hint="Date of birth"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@null"
        android:textSize="20sp"
        android:id="@+id/etDob"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:hint="Client ID"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@null"
            android:textSize="20sp"
            android:id="@+id/etID"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parentLayoutInstructions"
            android:orientation="vertical">
        <FrameLayout
            android:id="@+id/frameLayoutGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etClientGoals"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:hint="Goals"
        android:background="@null"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
            <ImageView
                android:id="@+id/btnAddIng"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/plusicon"
                android:clickable="true"
                android:visibility="invisible"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="15sp"
              />
        </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Address"
                android:layout_marginLeft="20sp"
                android:textSize="20sp"/>
    <EditText
        android:id="@+id/etClientAddress"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:hint="Street"
        android:inputType="textPostalAddress"
        android:background="@null"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
            <EditText
                android:id="@+id/etClientAddress2"
                android:layout_width="200sp"
                android:layout_height="70sp"
                android:hint="City"
                android:inputType="textPostalAddress"
                android:background="@null"
                android:textSize="20sp"

                android:layout_marginRight="20sp"
                />
            <EditText
                android:id="@+id/etClientAddress3"
                android:layout_width="200sp"
                android:layout_height="70sp"
                android:hint="State"
                android:inputType="textPostalAddress"
                android:background="@null"
                android:textSize="20sp"

                android:layout_marginRight="20sp"
                />
            <EditText
                android:id="@+id/etClientAddress4"
                android:layout_width="100sp"
                android:layout_height="70sp"
                android:hint="Zip Code"
                android:inputType="textPostalAddress"
                android:background="@null"
                android:textSize="20sp"
                android:layout_marginRight="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Address"
                android:layout_marginLeft="20sp"
                android:textSize="20sp"/>
    <EditText
        android:id="@+id/etClientOfficeAddress"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:hint="Street"
        android:background="@null"
        android:textSize="20sp"
        android:inputType="textPostalAddress"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
            <EditText
                android:id="@+id/etClientOfficeAddress2"
                android:layout_width="200sp"
                android:layout_height="70sp"
                android:hint="City"
                android:background="@null"
                android:textSize="20sp"
                android:inputType="textPostalAddress"
                android:layout_marginRight="20sp"
                />
            <EditText
                android:id="@+id/etClientOfficeAddress3"
                android:layout_width="200sp"
                android:layout_height="70sp"
                android:hint="State"
                android:background="@null"
                android:textSize="20sp"
                android:inputType="textPostalAddress"
                android:layout_marginRight="20sp"
                />
            <EditText
                android:id="@+id/etClientOfficeAddress4"
                android:layout_width="150sp"
                android:layout_height="70sp"
                android:hint="Zip Code"
                android:background="@null"
                android:textSize="20sp"
                android:inputType="textPostalAddress"
                android:layout_marginRight="20sp"
                />
        </LinearLayout>
    <EditText
        android:id="@+id/etClientPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:hint="Client Phone Number"
        android:background="@null"
        android:inputType="phone"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        />
        <EditText
            android:id="@+id/etCaregiverPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:hint="Caregiver Phone Number"
            android:background="@null"
            android:inputType="phone"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:text="Submit"
        android:background="#BDBDBD"
        android:textColor="#000"
        android:textAllCaps="false"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
