<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidlab.com.recaptube.Fragments.PraiseTabs.PraiseParticipationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/benefits_consequences"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="benefits and consequences"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/ideas"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="ideas"
                android:layout_toRightOf="@+id/benefits_consequences"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/methods"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="ideas"
                android:layout_toRightOf="@+id/ideas"
                android:textAllCaps="false"/>


            <Button
                android:id="@+id/pros_cons"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="pros_cons"
                android:layout_below="@+id/benefits_consequences"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/strategies"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="pros_cons"
                android:layout_below="@+id/ideas"
                android:layout_toRightOf="@+id/pros_cons"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"/>
        </RelativeLayout>


    </LinearLayout>


</FrameLayout>
